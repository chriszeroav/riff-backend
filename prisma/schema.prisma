generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  password String
  name     String?
  role     Role    @default(USER)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
